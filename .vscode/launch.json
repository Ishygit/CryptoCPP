{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run CryptoApp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/CryptoApp",
            "args": ["E", "SbsEncoder", "af,bf,cf,df,ef"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,  // Runs in external terminal 
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build CryptoApp"
        }
    ]
}
